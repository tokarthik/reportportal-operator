apiVersion: v1
kind: Service
metadata:
  labels:
    app: reportportal
  name: gateway
  namespace: '{{ meta.namespace }}'
spec:
  ports:
    # use 8081 to allow for usage of the dashboard which is on port 8080
    - name: http
      port: 8081
      protocol: TCP
      targetPort: 8081
  selector:
    component:  gateway
  sessionAffinity: None
  type: ClusterIP
