---
apiVersion: v1
kind: Service
metadata:
  labels:
    app: rabbitmq
  name: {{ rabbitmq_name }}
  namespace: {{ meta.namespace }}
spec:
  ports:
  - name: epmd
    port: 4369
    protocol: TCP
    targetPort: epmd
  - name: amqp
    port: {{ rabbitmq_port }}
    protocol: TCP
    targetPort: amqp
  - name: dist
    port: 25672
    protocol: TCP
    targetPort: dist
  - name: stats
    port: {{ rabbitmq_apiport }}
    protocol: TCP
    targetPort: stats
  - name: metrics
    port: 9419
    protocol: TCP
    targetPort: metrics
  selector:
    app: rabbitmq
  type: ClusterIP
